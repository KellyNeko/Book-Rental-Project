{% extends 'base.html.twig' %}

{# Show details of a selected book to be rented #}
{% block body %}
    {% include '_components/nav.html.twig' %}
    <h1>{{book.reference}}</h1>
    <h2 class="text-center">De : {{book.author.firstname ~" "~ book.author.lastname}}</h2>
    {% for book_category in book_categories %} 
        <h3 class="text-center blockquote-footer">{{book_category.category.label}}</h3>
    {% endfor %}
    <div class="text-center">
        <p>Voulez-vous louer ce livre ?</p>
        <a href="{{ path('book_rent', {'id': book.id}) }}" class="btn btn-success">Louer</a>
        <a href="{{ path('book_list') }}" class="btn btn-outline-danger">Retour Ã  la liste</a>
    </div>
{% endblock %}