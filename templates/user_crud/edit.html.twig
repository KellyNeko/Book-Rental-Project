{% extends 'base.html.twig' %}

{% block title %}Modifier son Profil{% endblock %}

{# Display of the user editing form #}
{% block body %}
        {% include '_components/nav.html.twig' %}
    <h1>Modifier son Profil</h1>

        {{ form_start(form) }}
        {# using bootstrap for layout #}
                <div class="row">
                        <div class="col-12">
                                <label for="last-name-label">Nom de famille</label>
                                {{ form_widget(form.last_name) }}
                        </div>
                        <div class="col-12">
                                <label for="first-name-label">Prénom</label>
                                {{ form_widget(form.first_name) }}
                        </div>
                        <div class="col-12">
                                <label for="last-name-label">Numéro de téléphone</label>
                                {{ form_widget(form.phone) }}
                        </div>
                        <div class="col-12">
                                <label for="paswd-label">Mot de passe</label>
                                {{ form_widget(form.password) }}
                        </div>
                </div>
                <button class="btn btn-success">Modifier</button>
        {{ form_end(form) }}

        <a href="{{ path('app_book') }}">Retour</a>
        
        {# {{ include('user_crud/_delete_form.html.twig') }} #}
{% endblock %}
